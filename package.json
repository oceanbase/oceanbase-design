    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.2",
    "runscript": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vanilla-jsoneditor": "^0.23.8",
    "vi-canvas-mock": "^1.0.0",
    "vitest": "^2.1.9",
    "vitest-fetch-mock": "^0.4.5",
    "web-vitals": "^3.5.2"
  }
}
