{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter \"@oceanbase/**\" build",
    "build:watch": "pnpm --filter \"@oceanbase/**\" build --watch",
    "ci": "npm run build",
    "deploy": "npm run site:build && npm run site:deploy",
    "dev": "npx babel --presets @babel/preset-env packages/design/src/theme/index.ts --out-file ./.dumi/tmp/plugin-theme-less/theme.js && cross-env UMI_ENV=theme dumi dev",
    "prepare": "dumi setup",
    "prepublishOnly": "npm run build",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "publish": "lerna publish",
    "publish:from-package": "lerna publish from-package",
    "site:build": "dumi build",
    "site:deploy": "gh-pages -d site",
    "start": "npm run dev",
    "test": "npm run version && cross-env TZ=UTC jest ",
    "test:coverage": "npm run version && cross-env TZ=UTC TEST_LOG=none jest --coverage",
    "test:update": "pnpm run version && cross-env TZ=UTC  jest --updateSnapshot",
    "locale:remove-useless": "ts-node scripts/remove-useless-locale.ts"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ant-design/colors": "^7.0.0",
    "@ant-design/cssinjs": "^1.11.1",
    "@ant-design/icons": "^5.1.4",
    "@babel/cli": "^7.22.6",
    "@babel/preset-env": "^7.22.7",
    "@ctrl/tinycolor": "^3.6.0",
    "@emotion/babel-preset-css-prop": "^11.11.0",
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@qixian.cs/github-contributors-list": "^1.1.0",
    "@stackblitz/sdk": "^1.9.0",
    "@testing-library/dom": "^8.20.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.4.1",
    "@types/react": "^18.2.14",
    "@umijs/fabric": "^2.14.1",
    "@umijs/test": "^4.0.72",
    "antd": "^5.6.4",
    "antd-style": "^3.4.1",
    "antd-token-previewer": "^1.1.0",
    "classnames": "^2.3.2",
    "copy-to-clipboard": "^3.3.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.9",
    "dumi": "^2.2.1",
    "father": "^4.2.3",
    "fs-extra": "^11.1.1",
    "gh-pages": "^3.2.3",
    "html2sketch": "^1.0.2",
    "jsonml-to-react-element": "^1.1.11",
    "jsonml.js": "^0.1.0",
    "lerna": "^6.6.2",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "mockdate": "^3.0.5",
    "prettier": "^3.0.0",
    "prismjs": "^1.29.0",
    "rc-drawer": "^6.3.0",
    "rc-footer": "^0.6.8",
    "rc-tabs": "^12.9.0",
    "rc-util": "^5.34.1",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.0",
    "react-intl": "^6.4.4",
    "runscript": "^1.5.3",
    "sylvanas": "^0.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vanilla-jsoneditor": "^0.17.8",
    "yorkie": "^2.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "repository": "git@github.com:oceanbase/design.git"
}
