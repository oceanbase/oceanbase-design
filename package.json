{
  "name": "root",
  "private": true,
  "repository": "git@github.com:oceanbase/oceanbase-design.git",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "build": "pnpm --filter \"@oceanbase/**\" build",
    "build:watch": "pnpm --filter \"@oceanbase/**\" build --watch",
    "build:design": "pnpm --filter \"@oceanbase/design\" build",
    "ci": "npm run tsc && npm run build && npm run lint && npm run test",
    "deploy": "npm run site:build && npm run site:deploy",
    "dev": "tsc --skipLibCheck packages/design/src/theme/*.ts --outDir ./.dumi/tmp/plugin-theme-less && cross-env DUMI_ENV=theme dumi dev",
    "start": "npm run dev",
    "prepare": "husky install && dumi setup",
    "prepublishOnly": "npm run build",
    "publish": "lerna publish",
    "publish:from-package": "lerna publish from-package",
    "site:build": "npm run build:design && dumi build",
    "site:deploy": "gh-pages -d site",
    "postpublish": "npm run sync:other-npm",
    "sync:other-npm": "node -e 'require(\"./scripts/sync-cnpm-and-tnpm\")()'",
    "test": "NODE_OPTIONS=--max_old_space_size=4096 cross-env TZ=UTC jest",
    "test:coverage": "NODE_OPTIONS=--max_old_space_size=4096 cross-env TZ=UTC TEST_LOG=none jest --coverage",
    "test:update": "NODE_OPTIONS=--max_old_space_size=4096 cross-env TZ=UTC jest --updateSnapshot",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --cache --ext .js,.jsx,.ts,.tsx --fix --format=pretty",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,less,md,json}\"",
    "tsc": "tsc --noEmit",
    "tsc:clean": "tsc --build --clean",
    "locale:remove-useless": "ts-node scripts/remove-useless-locale.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@ant-design/colors": "^7.0.0",
    "@ant-design/cssinjs": "^1.17.2",
    "@ant-design/icons": "^5.2.6",
    "@babel/cli": "^7.23.0",
    "@babel/preset-env": "^7.23.6",
    "@chenshuai2144/less2cssinjs": "^1.0.7",
    "@ctrl/tinycolor": "^4.0.2",
    "@emotion/babel-preset-css-prop": "^11.11.0",
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@qixian.cs/github-contributors-list": "^1.1.0",
    "@rc-component/trigger": "^1.18.2",
    "@stackblitz/sdk": "^1.9.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@umijs/fabric": "^4.0.1",
    "@umijs/test": "^4.0.88",
    "@vercel/analytics": "^1.1.1",
    "antd": "^5.11.2",
    "antd-style": "3.5.2",
    "antd-token-previewer": "^2.0.5",
    "babel-jest": "^29.7.0",
    "classnames": "^2.3.2",
    "copy-to-clipboard": "^3.3.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dumi": "^2.2.14",
    "eslint-plugin-jest": "^27.4.2",
    "execa": "^5.1.1",
    "father": "^4.3.7",
    "fs-extra": "^11.2.0",
    "gh-pages": "^6.1.0",
    "glob": "^10.3.10",
    "html2sketch": "^1.0.2",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.7.0",
