{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter \"@oceanbase/**\" build",
    "build:watch": "pnpm --filter \"@oceanbase/**\" build --watch",
    "ci": "npm run build && npm run lint && npm run test",
    "deploy": "npm run site:build && npm run site:deploy",
    "dev": "tsc --skipLibCheck packages/design/src/theme/index.ts --outDir ./.dumi/tmp/plugin-theme-less && cross-env UMI_ENV=theme dumi dev",
    "prepare": "dumi setup",
    "prepublishOnly": "npm run build",
    "publish": "lerna publish",
    "publish:from-package": "lerna publish from-package",
    "site:build": "dumi build",
    "site:deploy": "gh-pages -d site",
    "start": "npm run dev",
    "postpublish": "npm run sync:other-npm",
    "sync:other-npm": "node -e 'require(\"./scripts/sync-cnpm-and-tnpm\")()'",
    "test": "cross-env TZ=UTC jest",
    "test:coverage": "cross-env TZ=UTC TEST_LOG=none jest --coverage",
    "test:update": "cross-env TZ=UTC jest --updateSnapshot",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --cache --ext .js,.jsx,.ts,.tsx --fix --format=pretty",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "tsc": "tsc --noEmit",
    "tsc:clean": "tsc --build --clean",
    "locale:remove-useless": "ts-node scripts/remove-useless-locale.ts"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ant-design/colors": "^7.0.0",
    "@ant-design/cssinjs": "^1.16.2",
    "@ant-design/icons": "^5.2.5",
    "@babel/cli": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@ctrl/tinycolor": "^3.6.0",
    "@emotion/babel-preset-css-prop": "^11.11.0",
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@qixian.cs/github-contributors-list": "^1.1.0",
    "@stackblitz/sdk": "^1.9.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@umijs/fabric": "^4.0.1",
    "@umijs/test": "^4.0.75",
    "antd": "^5.8.3",
    "antd-style": "^3.4.4",
    "antd-token-previewer": "^1.1.0",
    "babel-jest": "^29.6.2",
    "classnames": "^2.3.2",
    "copy-to-clipboard": "^3.3.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.9",
    "dumi": "^2.2.5",
    "eslint-plugin-jest": "^27.2.3",
    "execa": "^5.1.1",
    "father": "^4.3.1",
    "fs-extra": "^11.1.1",
    "gh-pages": "^5.0.0",
    "html2sketch": "^1.0.2",
    "jest": "^29.6.2",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-fetch-mock": "^3.0.3",
    "jsonml-to-react-element": "^1.1.11",
    "jsonml.js": "^0.1.0",
    "lerna": "^7.1.5",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "mockdate": "^3.0.5",
    "prettier": "^3.0.2",
    "prismjs": "^1.29.0",
    "rc-checkbox": "^3.1.0",
    "rc-drawer": "^6.4.1",
    "rc-footer": "^0.6.8",
    "rc-tabs": "^12.10.0",
    "rc-util": "^5.36.0",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.0",
    "react-intl": "^6.4.4",
    "react-router-dom": "^6.15.0",
    "runscript": "^1.5.3",
    "svg-jest": "^1.0.1",
    "sylvanas": "^0.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vanilla-jsoneditor": "^0.17.9",
    "yorkie": "^2.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "repository": "git@github.com:oceanbase/design.git"
}
